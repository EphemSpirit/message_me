<h4 class="ui center aligned medium icon header">
  Welcome to The Looking Glass! <em>Where Nothing Is As It Seems</em>
  <i class="circular red power icon"></i>
  Please login to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(scope: :session, url: login_path, class: "ui form") do |f| %>
        <div class="field">
          <%= f.label :username, "Who are you, actually?" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Knock Once For Entry" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup white icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
